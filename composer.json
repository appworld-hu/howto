{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "ext-zip": "*",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^9.2",
        "laravel/sanctum": "^2.14.1",
        "laravel/tinker": "^2.7",
        "laravel/ui": "^3.4"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.6",
        "barryvdh/laravel-ide-helper": "^2.12",
        "fakerphp/faker": "^1.9.1",
        "jetbrains/phpstorm-attributes": "^1.0",
        "laravel/breeze": "^1.8",
        "laravel/sail": "^v1.13.5",
        "laravel/telescope": "^4.8",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^6.1",
        "phpunit/phpunit": "^9.5.10",
        "spatie/laravel-ignition": "^1.0",
        "symplify/easy-coding-standard": "^10.1",
        "vimeo/psalm": "^4.22"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "cs": [
            "@php ecs check --no-interaction --no-progress-bar --ansi"
        ],
        "sa": [
            "@php vendor/bin/psalm --show-info=true --stats"
        ],
        "sc": [
            "[ -e build/local-php-security-checker ] || curl -sL https://github.com/fabpot/local-php-security-checker/releases/download/v1.1.1/local-php-security-checker_1.1.1_linux_amd64 -o build/local-php-security-checker && chmod +x build/local-php-security-checker",
            "./build/local-php-security-checker --format=ansi"
        ],
        "coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "@php artisan test --coverage --min=9"
        ],
        "infection": [
            "[ -e build/bin/infection ] || curl -L https://github.com/infection/infection/releases/download/0.25.1/infection.phar -o build/bin/infection && chmod +x build/bin/infection",
            "build/bin/infection --min-msi=30 --min-covered-msi=30 --threads=$(nproc) --no-progress --show-mutations --ansi --log-verbosity=all"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
